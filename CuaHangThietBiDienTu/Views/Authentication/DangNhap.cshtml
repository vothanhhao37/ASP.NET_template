@model CuaHangThietBiDienTu.Context.KHACHHANG
   
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center mt-5 mb-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Đăng nhập</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DangNhap", "Authentication", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        @Html.TextBoxFor(m => m.TAIKHOAN, "", new { @class = "form-control", @placeholder = "Tên tài khoản" })

                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.PasswordFor(m => m.MATKHAU, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary btn-block" value="Đăng nhập" />
                    </div>
                }
            </div>
        </div>
        <p class="text-center mt-4" style="font-size:20px">Chưa có tài khoản? <a href="@Url.Action("DangKy")">Đăng ký</a></p>
        <br><br>
    </div>
   
</div>


