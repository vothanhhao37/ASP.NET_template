@model CuaHangThietBiDienTu.Context.KHACHHANG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2 style="text-align:center">Thêm khách hàng</h2>


