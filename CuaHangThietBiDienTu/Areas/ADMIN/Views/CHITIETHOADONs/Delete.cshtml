@model CuaHangThietBiDienTu.Context.CHITIETHOADON

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2 style="text-align:center">Xóa chi tiết đơn hàng</h2>

    <h3>Bạn chắc chắn muốn xóa chứ</h3>
    <div>
        <h4>Chi tiết hóa đơn</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
              Mã hóa đơn
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MAHOADON)
            </dd>

            <dt>
               Mã sản phẩm
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MASP)
            </dd>

            <dt>
              Số lượng
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SOLUONG)
            </dd>

            <dt>
               Đơn giá xuất
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DONGIAXUAT)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" /> 
                @Html.ActionLink("Trở về trang danh sách", "Index", null, new { @class = "btn btn-default ml-2" })
            </div>
        }
    </div>
</div>
